require_relative 'game_server'

Signal.trap(:INT) do
  puts 'You have killed me!'
end

def main
  s = GameServer.new
  sleep(0.001)
  while s.status == :initialized
    s.get_players()
    sleep(0.001)
    puts 'main loop ' , s.status
    s.update()
  end
  cards_dealt = false
  if s.status == :full and cards_dealt == false
    cards_dealt = true
    s.start_game
  end
  while s.status == :playing

  end
end

main