require_relative 'game_server'

#Signal.trap(:INT) do
#  puts 'You have killed me!'
#end

def main
  s = GameServer.new
  sleep(0.001)
  while s.status == :initialized
    s.get_players()
    sleep(0.001)
    puts 'main loop ' , s.status
    sleep(1)
    s.update()
  end

  sleep(1)

  if s.status == :full
    s.start_game
  end

  sleep(3)      #give clients some time before I start the turns...

  while s.status == :playing
    s.handle_turn
  end
end

main

